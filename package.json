{
  "name": "blog-site-api",
  "version": "0.0.0",
  "description": "RESTful API for management of users and blog articles",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev src/server.ts",
    "build": "tsc && npm run copy-sql",
    "clean": "cross-env NODE_ENV=development rimraf dist",
    "copy-sql": "cp -r src/sql dist/sql",
    "lint": "eslint ./src/**/*.{js,ts}",
    "ts-check": "tsc -p tsconfig.json --noEmit",
    "test:unit": "cross-env NODE_ENV=test jest queries.test.ts",
    "test:integration": "cross-env NODE_ENV=test jest integration.test.ts'",
    "test:integration:watch": "cross-env NODE_ENV=test jest integration.test.ts --watch'",
    "generate-key": "node -e \"console.log(require('crypto').randomBytes(256).toString('base64'));\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run ts-check"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "npm run ts-check"
    ]
  },
  "keywords": [
    "Blog",
    "Personal"
  ],
  "author": "Austin Brage",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.8.2",
    "@types/supertest": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-plugin-jest": "^27.4.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.1",
    "zod": "^3.22.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agusb19/personal-blog-api"
  },
  "bugs": {
    "url": "https://github.com/agusb19/personal-blog-api/issues"
  },
  "homepage": "https://github.com/agusb19/personal-blog-api/blob/main/README.md"
}
